{{ form_start(form, {'method': 'post', 'action': path('tasks')}) }}
<div class="form-group">
    <label class="sr-only" for="name">Text: </label>
    <div class="col-sm-12">
        {{ form_widget(form.name, {'attr' : {'placeholder': 'Add new task'}}) }}
    </div>
</div>
<div class="form-group">
    <label class="sr-only" for="descripiton">Description: </label>
    <div class="col-sm-3">
        {{ form_widget(form.description, {'attr' : {'placeholder': 'Add some description'}}) }}
    </div>
</div>

<div class="form-group">
    <label class="sr-only" for="dateToDone">When: </label>
    <div class="col-sm-3">
        <div class="form-group">
            <div class='input-group date' id='datetimepicker1'>
                {{ form_widget(form.dateToDone, {'attr' : {'placeholder': 'Pick up date and hour'}}) }}
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <label class="sr-only" for="Category">Category: </label>
    <div class="col-sm-3">
        {{ form_widget(form.category) }}
    </div>
</div>

<div class="form-group">
    <label class="sr-only" for="priority">Priority: </label>
    <div class="col-sm-2">
        {{ form_widget(form.priority) }}
    </div>
</div>

<div class="form-group">
    <div>
        <input type="submit" id="_submit" name="_submit" class="btn btn-success"
               value="Create"/>
    </div>
</div>
{{ form_end(form) }}

