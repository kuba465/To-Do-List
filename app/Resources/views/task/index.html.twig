{% extends "::base.html.twig" %}

{% block title %}AppBundle:Main:index{% endblock %}

{% block body %}
    <div>
        <h3 style="display: inline">Your lists</h3>
        <a href="{{ url('category_new') }}">
            <button class="btn btn-success glyphicon glyphicon-folder-open"> Dodaj</button>
        </a>
    </div>
    <br>
    <div class="row">
        <div class="col-md-3" id="lists">
            {% for category in categories %}
                <ul class="list-group nav nav-pills nav-stacked">
                    {#<li class="active"><a href="#">Home</a></li>#}
                    <li class="list-group-item"><a href="#">{{ category.name }}<span
                                    class="badge">ilośc zadań</span></a></li>
                </ul>
            {% endfor %}
        </div>
        <div class="col-md-9" id="tasks">
            <div id="newTask">

            </div>
            <div class="list-group">
                {% for task in tasks %}
                    <ul class="list-group">
                        <li class="list-group-item"><a href="#">{{ task.name }}</a></li>
                    </ul>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
