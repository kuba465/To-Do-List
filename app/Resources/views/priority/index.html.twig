{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Priorities list</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for priority in priorities %}
                <tr>
                    <td><a href="{{ path('priority_show', { 'id': priority.id }) }}">{{ priority.id }}</a></td>
                    <td>{{ priority.name }}</td>
                    <td>{{ priority.value }}</td>
                    <td>
                        <a href="{{ path('priority_show', { 'id': priority.id }) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('priority_edit', { 'id': priority.id }) }}" class="btn btn-warning">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <a href="{{ path('priority_new') }}" class="btn btn-success">Create a new priority</a>
    </div>
{% endblock %}
